/* pages/news/news-detail/news-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.post-img {
  width: 100%;
  height: 460rpx;
}

.music-img{
  position: absolute;
  width: 102rpx;
  height: 110rpx;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: .6;
}

.author {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.author-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.author-name{
  font-size: 32rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.publish-time{
  margin-left: 20rpx;
}
.title{
  margin-left: 30rpx;
  font-size: 40rpx;
  font-weight: 600;
  line-height: 70rpx;
  letter-spacing: 2rpx;
}
.tool{
  flex-direction: row;
}
.image-container {
  float: right;
  margin-right: 20rpx;
}
.tool image{
  width: 64rpx;
  height: 64rpx;
  margin-left: 10rpx;
}
.horizon{
  width: 100%;
  height: 1px;
  background-color: #ddd;
  position: relative;
  top: 32rpx;
  z-index: -99;
}
.content{
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 30rpx;
}
